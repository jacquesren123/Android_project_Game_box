    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/wordShowing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:text="@string/init_word"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="269dp"
        android:backgroundTint="@color/grey"
        android:text="A"
        android:textColor="#656565"
        app:layout_constraintBottom_toTopOf="@+id/buttonG"
        app:layout_constraintEnd_toStartOf="@+id/buttonB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="selectLetter"/>

    <Button
        android:id="@+id/buttonB"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginTop="269dp"
        android:backgroundTint="@color/grey"
        android:text="B"
        android:textColor="#656565"
        app:layout_constraintBottom_toTopOf="@+id/buttonH"
        app:layout_constraintEnd_toStartOf="@+id/buttonC"
        app:layout_constraintStart_toEndOf="@+id/buttonA"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="selectLetter"/>

    <Button
        android:id="@+id/buttonC"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginTop="269dp"
        android:backgroundTint="@color/grey"
        android:text="C"
        android:textColor="#656565"
        app:layout_constraintBottom_toTopOf="@+id/buttonI"
        app:layout_constraintEnd_toStartOf="@+id/buttonD"
        app:layout_constraintStart_toEndOf="@+id/buttonB"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="selectLetter"/>

    <Button
        android:id="@+id/buttonD"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginTop="269dp"
