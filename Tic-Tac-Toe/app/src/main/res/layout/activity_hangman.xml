        app:layout_constraintBottom_toTopOf="@+id/buttonQ"
        app:layout_constraintEnd_toStartOf="@+id/buttonL"
        app:layout_constraintStart_toEndOf="@+id/buttonJ"
        android:onClick="selectLetter"/>

    <Button
        android:id="@+id/buttonL"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/grey"
        android:text="L"
        android:textColor="#656565"
        app:layout_constraintBottom_toTopOf="@+id/buttonR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonK"
        android:onClick="selectLetter"/>

    <Button
        android:id="@+id/buttonM"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/grey"
        android:text="M"
        android:textColor="#656565"
        app:layout_constraintBottom_toTopOf="@+id/buttonS"
        app:layout_constraintEnd_toStartOf="@+id/buttonN"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="selectLetter"/>

    <Button
        android:id="@+id/buttonN"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/grey"
        android:text="N"
        android:textColor="#656565"
        app:layout_constraintBottom_toTopOf="@+id/buttonT"
